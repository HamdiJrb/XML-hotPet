<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayout"
        android:padding="8dp">

        <ImageView
            android:id="@+id/friendPic"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/b_sophie"
            android:layout_marginStart="12dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/friendName"
            android:layout_width="150dp"
            android:layout_height="20dp"
            android:text="Sophie"
            android:fontFamily="@font/nexa_bold"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/friendPic"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/friendMessage"
            android:layout_width="250dp"
            android:layout_height="20dp"
            android:text="Wanna hang out ?"
            android:fontFamily="@font/nexa_regular"
            android:textColor="@color/blackH2"
            app:layout_constraintTop_toBottomOf="@+id/friendName"
            app:layout_constraintLeft_toRightOf="@+id/friendPic"
            android:layout_marginStart="16dp"
            android:layout_marginTop="6dp"
            android:textSize="16sp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>